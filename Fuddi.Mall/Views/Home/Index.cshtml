@foreach (var item in CacheHelper.Instance.CategoryList)
{
  <div class="part category-part">
    <a href="/" class="more">更多商品，点击查看 &gt;&gt;</a>
    <h2 class="part-title">@(item.Name)</h2>
    <ul>
      <li class="category-banner part-item"></li>
      @for (int i = 0; i < 4; i++)
      {
        <li class="part-item">
          <i class="_icon _icon-tag _icon-tag-without-char _icon-tag-without-char-purple">十元专区</i>
          <a class="product-preview" href="/product/detail?pid=">
